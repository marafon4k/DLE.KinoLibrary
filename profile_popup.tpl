<div class="avatar_bg">
    <div class="avatar_hover"></div>
    <div class="avatar_popup" style="background-image:url({foto});"></div>
    <div class="avatar_hover_content">        
        <div class="userinfo_left">
            <div><b>Имя:</b> {fullname}</div>
            <div><b>Группа:</b> {status}</div>
            <div>[online]На сайте[/online][offline]Был {lastdate}[/offline]</div>
        </div>
        <div class="userinfo_right">
            <div><b>Зарегистрирован:</b></div>
            <div>{registration}</div>
            <div>{rate}</div>
        </div>
    </div>
    <div class="profile_popup_counters">
        <div class="profile_popup_counter">Публикаций: <b>{news-num}</b><span>{news}</span></div>
        <div class="profile_popup_rss">[rss]RSS[/rss]</div>
        <div class="profile_popup_counter">Комментариев: <b>{comm-num}</b><span>{comments}</span></div>
    </div>
</div>